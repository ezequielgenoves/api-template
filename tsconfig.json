{
  "compilerOptions": {
    "module": "CommonJS",
    "types": ["node", "express"],
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@Controller": ["src/controllers/controller"],
      "@repositories/*": ["src/repositories/*"],
      "@Repository": ["src/repositories/repository"],
      "@services/*": ["src/services/*"],
      "@Service": ["src/services/service"],
      "@entities/*": ["src/entities/*"],
      "@Entity": ["src/entities/entity"],
      "@CrudManager": ["src/components/crud.manager"],
    }
  },
  "include": ["src/**/*.ts", "node_modules/@types/**/*.d.ts"],
  "exclude": []
}
