{
  "compilerOptions": {
    "module": "CommonJS",
    "types": ["node", "express"],
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "paths": {
      "@routes/*": ["api/routes/*"],
      "@controllers/*": ["api/controllers/*"],
      "@Controller": ["api/controllers/controller"],
      "@repositories/*": ["api/repositories/*"],
      "@Repository": ["api/repositories/repository"],
      "@services/*": ["api/services/*"],
      "@Service": ["api/services/service"],
      "@entities/*": ["api/entities/*"],
      "@Entity": ["api/entities/entity"],
      "@CrudManager": ["api/components/crud.manager"],
    }
  },
  "include": ["api/**/*.ts", "node_modules/@types/**/*.d.ts"],
  "exclude": []
}
